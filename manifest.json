{
  "manifest_version": 3,
  "name": "Ball Detector",
  "version": "1.0",
  "description": "إضافة للكشف عن الكرات أثناء اللعب",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
