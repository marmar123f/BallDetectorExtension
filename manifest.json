{
  "manifest_version": 3,
  "name": "Ball Detector",
  "version": "1.0",
  "description": "إظهار مكان الكرة في لعبة Thimbles",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.melbet.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.melbet.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
