{
  "manifest_version": 3,
  "name": "Ball Detector for Thimbles",
  "version": "1.0",
  "description": "Detects the ball position in Thimbles game",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://melbet.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://melbet.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
  "default_popup": "popup.html",
  "default_icon": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
    }
  }
}
